<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical"
    android:background="@color/updata_color_background">
    <LinearLayout
        android:background="@color/updata_color_background"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/updata_ic_back"
            android:padding="14dp"/>
        <!--detail Tab-->
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/updata_title"
            android:textColor="@color/updata_colorWhite"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="11dp"
        android:background="@color/updata_color_localversion">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前版本"
            android:textSize="23sp"
            android:textColor="@color/updata_colorWhite"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:id="@+id/tv_localVersion"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="V1.0.0"
            android:textSize="23sp"
            android:textColor="@color/updata_colorWhite"
            android:layout_marginRight="22dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/updata_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/updata_colorWhite"
        android:layout_marginLeft="22dp"
        android:visibility="visible"
        android:id="@+id/tv_newVersion"
        android:text="当前版本为最新版本"/>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="11dp"
        android:background="@color/updata_color_localversion">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="立即更新"
            android:textSize="23sp"
            android:textColor="@color/updata_colorWhite"
            android:layout_marginLeft="22dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/updata_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="23sp"
            android:textColor="@color/updata_colorWhite"
            android:layout_marginRight="22dp"/>
    </RelativeLayout>
</LinearLayout>